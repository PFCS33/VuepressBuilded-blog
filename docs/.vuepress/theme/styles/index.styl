html
  background-color: $backgroundColor
  height: 100%
  body
    background-color: $backgroundColor
    height: 100%
    #app
      height: 100%
      #global-layout
        display: flex
        flex-direction: column
        height: 100%
        .theme-container
          flex: 1 1 auto
          .navbar
            display: flex
            align-items: center
            height: 4rem
            background-image: linear-gradient(to bottom, #e6fcf5, $backgroundColor);
            border-bottom-width: 0.125rem
            .site-name
              font-size: 1.4rem
            .links
              background-color: transparent
              height: 2.5rem
              align-items: center
              .search-box
                margin-right: 1.5rem
                input
                  font-size: 1.1rem
                  background-color: transparent
                  border-width: 0.125rem
                  color: $textColor
              .nav-links
                font-size: 1.1rem
                .nav-item:first-child
                  margin-left: 0
                .nav-item
                  margin-left: 1.75rem
                  .dropdown-title
                    font-size: 1.1rem
                  .nav-dropdown
                    text-align: center
                    background-color: $backgroundColor
                    border: 0.125rem solid $borderColor
                    padding: 0.8rem 0
                    .dropdown-item
                      padding-bottom: 0.4rem
                      a:hover
                        color: $linkColor
                      h4
                        border-top: 0.0625rem solid $borderColor
                        cursor: text
                        margin: 0.45rem 0.375rem 0
          .home
            padding: 6rem 0 0
            max-width: 800px
            .footer 
              display: none
            .hero
              margin-left: 2rem
              margin-right: 2rem
              border: 0.125rem solid $darkBorderColor
              box-shadow: 0 0.25rem 1rem 0 $darkBorderColor
              border-radius: 5.625rem
              margin-bottom: 0.625rem
              padding: 2rem
              transition: box-shadow 0.2s
              background-image: radial-gradient(circle at center center,#ddece9, $backgroundColor)

              img 
                margin: 3.5rem auto 0
                transition: transform 0.2s
                border-radius: 1rem
              #main-title 
                margin: 2rem auto 0
              .description  
                margin: 0.5rem auto 0
                font-size: 1.5rem
              .action
                margin: 3rem auto 0.8rem
            .hero:hover
              box-shadow: 0rem 0.5rem 1.25rem 0.25rem rgba(126, 141, 133,0.6)
              img
                transform: scale(1.05)
            .features
              margin-left: 2rem
              margin-right: 2rem
              border-top: 0.125rem solid $borderColor
              border-bottom: 0.125rem solid $borderColor
              .feature
                text-align: center
                h2
                  font-size: 1.4rem
        .footer
          flex-shrink: 0
